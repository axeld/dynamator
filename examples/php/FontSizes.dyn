<dynamator language="php">

  <class name="size">
    <for>
      $i = 1; $i <= 7; $i++
    </for>
    <discard-tag/>
  </class>

  <class name="font">
    <attr name="size">
      <content>
        $i
      </content>
    </attr>
    <attr name="class">
      <discard/>
    </attr>
  </class>

  <class name="fontsize">
    <content>
      $i
    </content>
    <discard-tag/>
  </class>

</dynamator>
